{
  "manifest_version": 3,
  "name": "GAIA DOM Sensor",
  "version": "1.0",
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "http://localhost:3001/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["domReader.js"]
    },
    {
      "matches": ["http://localhost:3001/*"],
      "js": ["panelListener.js"]
    }
  ]
}
